<html>

    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>{% block title %}Kiter.io{% endblock title %}</title>

        {% block stylesheet %}

            {# CSS - Bootstrap #}
            <link href="/vendor/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet">
            {# CSS - FlatUI #}
            <link href="/vendor/flat-ui/dist/css/flat-ui.css" rel="stylesheet">
            {# CSS - Parsley CSS Bootstrap #}
            <link href="/vendor/parsleyjs/src/parsley.css" rel="stylesheet">

            {% stylesheets filter='cssrewrite'
                '../app/Resources/public/css/style.css'
            %}
                <link rel="stylesheet" href="{{ asset_url }}" />
            {% endstylesheets %}

        {% endblock stylesheet %}

        <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
        <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
        <![endif]-->

        {% block style %}
        {% endblock style %}

        {% block structuredData %}
        {% endblock structuredData %}

    </head>

    <body>

        <nav class="navbar navbar-default" role="navigation">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navbar-collapse-01">
                        <span class="sr-only">Toggle navigation</span>
                    </button>
                    <a class="navbar-brand" href="/">kiter.io</a>
                </div>
                <div class="collapse navbar-collapse" id="navbar-collapse-01">
                    <ul class="nav navbar-nav navbar-left">
                        <li><a href="{{ path("remiii_map_spotmap") }}">{{ "map"|trans|capitalize }}</a></li>
                        <li><a href="{{ path("remiii_map_spotsList") }}">{{ "spots_list"|trans|capitalize }}</a></li>
                        <li><a href="{{ path("remiii_map_spotProposalAdd") }}">{{ "add_spot"|trans|capitalize }}</a></li>
                        <li><a href="{{ path("remiii_corporate_contact") }}">{{ "contact"|trans|capitalize }}</a></li>
                    </ul>
                    <ul class="nav navbar-nav navbar-right">
                        <li><a href="{{ path("remiii_corporate_home", {"_locale": "en"}) }}">EN</a></li>
                        <li><a href="{{ path("remiii_corporate_home", {"_locale": "fr"}) }}">FR</a></li>
                        <li><a href="{{ path("remiii_corporate_home", {"_locale": "de"}) }}">DE</a></li>
                    </ul>
                </div>
            </div>
        </nav>

        <div class="body">
            {% block body %}
                <p>Block Body</p>
            {% endblock body %}
        </div>


        <footer>
            <div class="container">
                <p>{{ 'footer.text_claim'|trans }}.</p>
                <br>
                <div class="row">
                    <div class="col-md-4">
                        <h5>{{ 'features'|trans|capitalize }}</h5>
                        <ul class="list-unstyled">
                            <li><a href="{{ path("remiii_map_spotmap") }}">{{ "map"|trans|capitalize }}</a></li>
                            <li><a href="{{ path("remiii_map_spotProposalAdd") }}">{{ "add_spot"|trans|capitalize }}</a></li>
                            <li><a href="{{ path("remiii_map_spotsList") }}">{{ "spots_list"|trans|capitalize }}</a></li>

                        </ul>
                        <hr>
                        <h5>>> {{ 'developper_part'|trans|capitalize }}</h5>
                        <ul class="list-unstyled">
                            <li><a href="#">API</a></li>
                            <li><a href="https://github.com/Remiii/remiii-website-kiter" target="_blank">Source code</a></li>
                            <li><a href="{{ path("remiii_map_spotsList_geojson") }}">/spot/list.geojson</a></li>
                            <li><a href="/humans.txt" target="_blank">humans.txt</a></li>
                            <li><a href="/hackers.txt" target="_blank">hackers.txt</a></li>
                        </ul>
                    </div>
                    <div class="col-md-4 col-md-offset-2">
                        <h5>{{ 'project'|trans|capitalize }}</h5>
                        <ul class="list-unstyled">
                            <li><a href="{{ path("remiii_corporate_about") }}">{{ "about"|trans|capitalize }}</a></li>
                            <li><a href="{{ path("remiii_corporate_faq") }}">{{ "faq"|trans|capitalize }}</a></li>
                            <li><a href="{{ path("remiii_corporate_credit") }}">{{ "credit"|trans|capitalize }}</a></li>
                            <li><a href="{{ path("remiii_corporate_legal") }}">{{ "legal"|trans|capitalize }}</a></li>
                            <li><a href="{{ path("remiii_corporate_contact") }}">{{ "contact"|trans|capitalize }}</a></li>
                            <li>>> <a href="{{ path("remiii_corporate_home", {"_locale": "en"}) }}">{{ 'english'|trans|capitalize }}</a> / <a href="{{ path("remiii_corporate_home", {"_locale": "fr"}) }}">{{ 'french'|trans|capitalize }}</a> / <a href="{{ path("remiii_corporate_home", {"_locale": "de"}) }}">{{ 'german'|trans|capitalize }}</a></li>
                        </ul>
                    </div>
                </div>
                <hr>
                <p>kiter.io - 2014 - <a href="http://madewithloveinparis.org" target="_blank">Made with &hearts; in Paris</a> - Fork me on <a href="https://github.com/Remiii/remiii-website-kiter" target="_blank">GitHub&nbsp;<span class="fui-github"></span></a> - By <a href="http://remibarbe.fr" target="_blank">Remiii</a> - <a href="#">{{ 'back_to_the_top'|trans }}</a></p>
            </div>
        </footer>

        {% block javascript %}

            {# Script - Jquery #}
            <script src="/vendor/jquery/dist/jquery.min.js"></script>

            {# Script - Twitter Bootstrap #}
            <script src="/vendor/bootstrap/dist/js/bootstrap.min.js"></script>

            {# Script - FlatUI #}
            <script src="/vendor/flat-ui/dist/js/flat-ui.min.js"></script>

            {# Script - Parsley #}
            <script src="/vendor/parsleyjs/dist/parsley.min.js"></script>

            {# Script Scroll to top #}
            <script type="text/javascript">
                $(function()
                {
                    $('a[href=#]').click(function(){
                        $('html,body').animate({scrollTop:0}, 'slow');
                        return false ;
                    });
                });
            </script>
            {# End Script Scroll to top #}

            {# GA #}
            <script>
                (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
                    (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
                    m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
                })(window,document,'script','//www.google-analytics.com/analytics.js','ga');
                ga('create', 'UA-57140638-1', 'auto');
                ga('send', 'pageview');
            </script>

            {# TODO
            #}

        {% endblock javascript %}

    </body>

</html>

